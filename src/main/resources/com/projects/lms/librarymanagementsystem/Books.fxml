<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projects.lms.librarymanagementsystem.BooksController">
    <TableView fx:id="booksTable">
        <columns>
            <TableColumn text="ID" fx:id="idColumn"/>
            <TableColumn text="Title" fx:id="titleColumn"/>
            <TableColumn text="Author" fx:id="authorColumn"/>
            <TableColumn text="ISBN" fx:id="isbnColumn"/>
            <TableColumn text="Shelf Location" fx:id="shelfLocationColumn"/>
            <TableColumn text="Status" fx:id="statusColumn"/>
        </columns>
    </TableView>
    <HBox spacing="10">
        <TextField fx:id="titleTextField" promptText="Title"/>
        <TextField fx:id="authorTextField" promptText="Author"/>
        <TextField fx:id="isbnTextField" promptText="ISBN"/>
        <TextField fx:id="shelfLocationTextField" promptText="Shelf Location"/>
        <TextField fx:id="statusTextField" promptText="Status"/>
        <Button text="Add Book" onAction="#handleAddBook"/>
    </HBox>
    <Button text="Delete Selected Book" onAction="#handleDeleteBook"/>
</VBox>
